{
  "name": "distract-me-not",
  "version": "2.0.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.6.0",
    "bcryptjs": "^2.4.3",
    "copy-to-clipboard": "^3.3.1",
    "evergreen-ui": "^5.1.2",
    "fuzzaldrin-plus": "^0.6.0",
    "node-sass": "^4.14.1",
    "query-string": "^6.13.8",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "rescripts start",
    "build": "INLINE_RUNTIME_CHUNK=false rescripts build",
    "build:firefox": "npm run build && cd build && mv -f manifest.firefox.json manifest.json",
    "build:chrome": "npm run build && cd build && rm -f manifest.firefox.json",
    "package": "web-ext build --source-dir=build --artifacts-dir=. --overwrite-dest",
    "package:source": "zip -r -FS distract_me_not-source.zip * .rescriptsrc.js .env.development .env.test -x build\\* node_modules\\* old\\* old-src\\* screenshots\\* *.zip",
    "test": "rescripts test --verbose",
    "test:all": "npm test -- --watchAll --testMatch \"**/src/**/*.test.{js,jsx}\"",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "env": {
      "webextensions": true
    },
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rescripts/cli": "0.0.15",
    "@types/jest": "^26.0.19"
  }
}
